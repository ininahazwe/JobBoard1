{{ form_start(form, { 'attr': {'class': 'default-form'} }) }}
    {{ form_row(form.titre) }}
    {{ form_row(form.description) }}
    {{ form_row(form.images) }}
    <div class="files-outer d-flex gap-2 mt-2 mb-3">
        {% if app.request.attributes.get('_route') == 'blog_edit' %}
            <h4 class="title">Illustrations</h4>
            {% for image in blog.images %}
                <div class="image-container" style="background-image: url('{{ asset('/uploads/' ~ image.nom) }}'); background-repeat: no-repeat">
                    <div class="supprimer-image">
                        <a class="" href="{{ path('blog_delete_files', {id: image.id}) }}" data-delete data-token="{{ csrf_token('delete' ~ image.id) }}"><span class="la la-trash"></span></a>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
    <div class="row">
        <div class="form-group col-lg-3 col-md-12">{{ form_row(form.isStatut) }}</div>
        <div class="form-group col-lg-3 col-md-12">{{ form_row(form.type) }}</div>
        <div class="form-group col-lg-3 col-md-12">{{ form_row(form.faq) }}</div>
        <div class="form-group col-lg-3 col-md-12">{{ form_row(form.auteur) }}</div>
        <div class="form-group col-lg-3 col-md-12">{{ form_row(form.tag) }}</div>
    </div>


    <button class="theme-btn btn-style-one small">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
