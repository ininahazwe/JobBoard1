{% extends 'base-dashboard.html.twig' %}

{% block title %}Actualités{% endblock %}

{% block body %}
<section class="user-dashboard">
    <div class="dashboard-outer">
        <div class="row">
            <div class="col-lg-12">
                <!-- Ls widget -->
                <div class="ls-widget">
                    <div class="tabs-box">
                        <div class="widget-title d-flex flex-row">
                            <h4>Actualités</h4>
                            <a class="theme-btn btn-style-three small" href="{{ path('blog_new') }}"><i class="fas fa-plus-circle mr-2"></i>Ajouter</a>
                        </div>

                        <div class="widget-content">
                            <div class="table-outer">
                                <table class="default-table" id="datatable">
                                    <thead>
                                        <tr>
                                            <th>Titre</th>
                                            <th>Auteurs</th>
                                            <th>Statut</th>
                                            <th>actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for blog in blogs %}
                                        <tr>
                                            <td>{{ blog.titre }}</td>
                                            <td>
                                                {% for user in blog.auteur %}
                                                    <ul><li>{{ user.fullname|capitalize }}</li></ul>
                                                {% endfor %}
                                            </td>
                                            <td>{{ blog.isStatut ? 'Publié' : 'Non publié' }}</td>
                                            <td>
                                                <div class="option-box">
                                                    <ul class="option-list">
                                                        <li><a href="{{ path('blog_show', {'slug': blog.slug}) }}" data-text="Voir"><span class="la la-eye"></span></a></li>
                                                        <li><a href="{{ path('blog_edit', {'id': blog.id}) }}" data-text="Modifier"><span class="la la-pen"></span></a></li>
                                                        <li>{{ include('blog/_delete_form.html.twig') }}</li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="7">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
