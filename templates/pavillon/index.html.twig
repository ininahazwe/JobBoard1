{% extends 'base-dashboard.html.twig' %}

{% block title %}Pavillon index{% endblock %}

{% block body %}
<section class="user-dashboard">
    <div class="dashboard-outer">
        <div class="row">
            <div class="col-lg-12">
                <!-- Ls widget -->
                <div class="ls-widget">
                    <div class="tabs-box">
                        <div class="widget-title d-flex flex-row">
                            <h4>Pavillons</h4>
                            <a class="theme-btn btn-style-three small" href="{{ path('pavillon_new') }}"><i class="fas fa-plus-circle mr-2"></i>Ajouter</a>
                        </div>

                        <div class="widget-content">
                            <div class="table-outer">
                                <table class="default-table">
                                    <thead>
                                        <tr>
                                            <th>Nom</th>
                                            <th>actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for pavillon in pavillons %}
                                        <tr>
                                            <td>{{ pavillon.nom }}</td>
                                            <td>
                                                <div class="option-box">
                                                    <ul class="option-list">
                                                        <li><a href="{{ path('pavillon_show', {'slug': pavillon.slug}) }}" data-text="View Aplication"><span class="la la-eye"></span></a></li>
                                                        <li><a href="{{ path('pavillon_edit', {'id': pavillon.id}) }}" data-text="Approve Aplication"><span class="la la-pen"></span></a></li>
                                                        <li>{{ include('pavillon/_delete_form.html.twig') }}</li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="5">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
