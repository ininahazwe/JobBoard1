{% extends 'base-dashboard.html.twig' %}

{% block title %}{{ app.request.getSchemeAndHttpHost() }} | Dictionnaire{% endblock %}

{% block body %}
    <section class="user-dashboard">
        <div class="dashboard-outer">
            <div class="row">
                <div class="col-lg-12">
                    <!-- Ls widget -->
                    <div class="ls-widget">
                        <div class="tabs-box">
                            <div class="widget-title d-flex flex-row">
                                <h4>Dictionnaire</h4>
                                <a class="theme-btn btn-style-three small" href="{{ path('dictionnaire_new') }}"><i class="fas fa-plus-circle mr-2"></i>Ajouter</a>
                            </div>

                            <div class="widget-content">
                                <div class="table-outer">
                                    <table class="default-table" id="datatable">
                                        <thead>
                                            <tr>
                                                <th>Type</th>
                                                <th>Value</th>
                                                <th>actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for dictionnaire in dictionnaires %}
                                            <tr>
                                                <td>{{ dictionnaire.type }}</td>
                                                <td>{{ dictionnaire.value }}</td>
                                                <td>
                                                    <div class="option-box">
                                                        <ul class="option-list">
                                                            <li><a href="{{ path('dictionnaire_show', {'id': dictionnaire.id}) }}" data-text="Voir"><span class="la la-eye"></span></a></li>
                                                            <li><a href="{{ path('dictionnaire_edit', {'id': dictionnaire.id}) }}" data-text="Modifier"><span class="la la-pen"></span></a></li>
                                                            <li>{{ include('dictionnaire/_delete_form.html.twig') }}</li>
                                                        </ul>
                                                    </div>
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="6">no records found</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
