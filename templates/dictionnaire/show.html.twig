{% extends 'base-dashboard.html.twig' %}

{% block title %}Dictionnaire{% endblock %}

{% block body %}
<section class="user-dashboard">
    <div class="dashboard-outer">
        <div class="row">
            <div class="col-lg-12">
                <!-- Ls widget -->
                <div class="ls-widget">
                    <div class="tabs-box">
                        <div class="widget-title d-flex flex-row">
                            <h4>Dictionnaire | {{ dictionnaire.value }}</h4>
                            <div class="option-box">
                                <ul class="option-list">
                                    <li><a href="{{ path('dictionnaire_index') }}" data-text="Revenir en arriÃ¨re"><span class="la la-fast-backward"></span></a></li>
                                    <li><a href="{{ path('dictionnaire_edit', {'id': dictionnaire.id}) }}" data-text="Editer"><span class="la la-pen"></span></a></li>
                                    <li>{{ include('dictionnaire/_delete_form.html.twig') }}</li>
                                </ul>
                            </div>
                        </div>

                        <div class="widget-content">
                            <div class="table-outer">
                                <table class="default-table">
                                    <tbody>
                                        <tr>
                                            <th>Type</th>
                                            <td>{{ dictionnaire.type }}</td>
                                        </tr>
                                        <tr>
                                            <th>Value</th>
                                            <td>{{ dictionnaire.value }}</td>
                                        </tr>
                                        <tr>
                                            <th>CreatedAt</th>
                                            <td>{{ dictionnaire.createdAt ? dictionnaire.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                        </tr>
                                        <tr>
                                            <th>UpdatedAt</th>
                                            <td>{{ dictionnaire.updatedAt ? dictionnaire.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
