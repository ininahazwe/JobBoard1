<!-- Banner Section-->
<section class="banner-section-five" style="background-image: url();">
    <div class="auto-container">
        <div class="row">
            <div class="content-column col-lg-7 col-md-12 col-sm-12">
                <div class="inner-column wow fadeInUp"  data-wow-delay="500ms">
                    <div class="title-box">
                        <h3>Le <span class="colored">forum en ligne</span> de référence</h3>
                        <h4>Pour accompagner vers l'emploi les candidats en situation de handicap</h4>
                        <div class="text"></div>
                    </div>

                    <!-- Job Search Form -->
                    <div class="job-search-form wow fadeInUp" data-wow-delay="1000ms">
                        {{ form_start(form, {'action': path('annonces_all')}) }}
                            <div class="row">
                                <div class="form-group col-lg-5 col-md-12 col-sm-12">
                                    <span class="icon flaticon-search-1"></span>
                                    {{ form_row(form.q) }}
                                </div>
                                <!-- Form Group -->
                                <div class="form-group col-lg-4 col-md-12 col-sm-12 location">
                                    <span class="icon flaticon-map-locator"></span>
                                    {{ form_row(form.zone) }}
                                </div>
                                <!-- Form Group -->
                                <div class="form-group col-lg-3 col-md-12 col-sm-12 btn-box">
                                    <a href="{{ path('annonces_all') }}" class="theme-btn btn-style-seven"><span class="btn-title">Touver un emploi</span></a>
                                </div>
                            </div>
                        {{ form_end(form, {'render_rest': false}) }}
                    </div>
                    <!-- Job Search Form -->
                </div>
            </div>

            <div class="image-column col-lg-5 col-md-12">
                <div class="image-box">
                    <div class="row">
                        <div class="column col-lg-6 col-md-6 col-sm-12 wow fadeInLeft" data-wow-delay="1500ms">
                            <figure class="image anm" data-speed-x="2"><img src="{{ asset('images/resource/banner-img-4.png') }}" alt=""></figure>
                        </div>
                        <div class="column col-lg-6 col-md-6 col-sm-12 wow fadeInRight" data-wow-delay="2000ms">
                            <figure class="image anm" data-speed-x="2"><img src="{{ asset('images/resource/banner-img-5.png')}}" alt=""></figure>
                            <figure class="image anm" data-speed-x="2"><img src="{{ asset('images/resource/banner-img-6.png') }}" alt=""></figure>
                        </div>
                    </div>

                    <!-- Info BLock One -->
                    {% for forum in forums %}
                        <div class="info_block wow fadeIn anm" data-wow-delay="2500ms" data-speed-x="2" data-speed-y="2">
                            <span class="icon flaticon-email-3"></span>
                            <p>{{ forum.nom }}</p>
                            <div class="text" style="font-size: 10px">Du {{ forum.dateOuverture|date('m-d-Y') }} au {{ forum.dateFermeture|date('m-d-Y') }}</div>
                        </div>

                        <!-- Info BLock Two -->
                        <div class="info_block_two wow fadeIn anm" data-wow-delay="3000ms" data-speed-x="3" data-speed-y="3">
                            <p>10k+ Offres d'emplois</p>
                            <div class="container">
                                <div class="row">
                                    {% for stand in forum.stand %}
                                        {% if stand.logo %}
                                                {% for logo in stand.logo %}
                                                    <div class="col"><img class="img-thumbnail" src="{{ asset('uploads/' ~ logo.nom) }}" alt="logo" style="width: 50px"></div>
                                                {% else %}
                                                    <div class="col"><img class="img-thumbnail" src="{{ asset('uploads/stand.png') }}" alt="logo"  style="width: 50px"></div>
                                                {% endfor %}
                                        {% endif %}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Section-->