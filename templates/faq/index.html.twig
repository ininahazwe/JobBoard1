{% extends 'base-dashboard.html.twig' %}

{% block title %}FAQ{% endblock %}

{% block body %}
<section class="user-dashboard">
    <div class="dashboard-outer">
        <div class="row">
            <div class="col-lg-12">
                <!-- Ls widget -->
                <div class="ls-widget">
                    <div class="tabs-box">
                        <div class="widget-title d-flex flex-row">
                            <h4>F.A.Q</h4>
                            <a class="theme-btn btn-style-three small" href="{{ path('faq_new') }}"><i class="fas fa-plus-circle mr-2"></i>Ajouter</a>
                        </div>

                        <div class="widget-content">
                            <div class="table-outer">
                                <table class="default-table" >
                                    <thead>
                                        <tr>
                                            <th>Question</th>
                                            <th>Reponse</th>
                                            <th>actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for faq in faqs %}
                                        <tr>
                                            <td>{{ faq.question }}</td>
                                            <td>{{ faq.reponse }}</td>
                                            <td>
                                                <div class="option-box">
                                                    <ul class="option-list">
                                                        <li><a href="{{ path('faq_show', {'id': faq.id}) }}" data-text="Voir"><span class="la la-eye"></span></a></li>
                                                        <li><a href="{{ path('faq_edit', {'id': faq.id}) }}" data-text="Modifier"><span class="la la-pen"></span></a></li>
                                                        <li>{{ include('faq/_delete_form.html.twig') }}</li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="4">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

