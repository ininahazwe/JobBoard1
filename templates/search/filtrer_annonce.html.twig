{{ form_start(form, {attr: {class: 'filter js-filter-form'}}) }}
<div class="spinner-border js-loading" role="status" aria-hidden="true" style="display: none">
    <span class="sr-only">Loading...</span>
</div>
<div class="inner-column">
    <div class="filters-outer">
        <button type="button" class="theme-btn close-filters">X</button>

        <!-- Filter Block -->
        <div class="filter-block">
            <h4>Rechercher par nom</h4>
            <div class="form-group">
                {{ form_row(form.q) }}
                <span class="icon flaticon-search-3"></span>
            </div>
        </div>

        <!-- Filter Block -->
        <div class="filter-block">
            <h4>Zone géographique</h4>
            <div class="form-group">
                {{ form_row(form.zone) }}
               <span class="icon flaticon-map-locator"></span>
            </div>
        </div>

        <!-- Filter Block -->
        <div class="filter-block">
            <h4>Secteur</h4>
            <div class="form-group">
                {{ form_row(form.secteur) }}
                <span class="icon flaticon-map-locator"></span>
            </div>
        </div>

        <!-- Filter Block -->
        <div class="filter-block">
            <h4>Diplôme</h4>
            <div class="form-group">
                {{ form_row(form.diplome) }}
                <span class="icon flaticon-map-locator"></span>
            </div>
        </div>

        <!-- Filter Block -->
        <div class="filter-block">
            <h4>Type de contrat</h4>
            <div class="form-group">
                {{ form_row(form.contrat) }}
                <span class="icon flaticon-map-locator"></span>
            </div>
        </div>

        <ul class="checkboxes">
            <li>
                <input id="check-f" type="checkbox" name="check">
                <label for="check-f">RQTH ?</label>
            </li>
        </ul>
        <!-- Filter Block -->
        <div class="filter-block">
            <h4>Tags</h4>
            <div class="form-group">
                {#{{ form_row(form.tags) }}#}
            </div>
        </div>
        <!-- Form Group -->
        <div class="form-group col-lg-2 col-md-12 col-sm-12 text-right">
            <button type="submit" class="theme-btn btn-style-one small">Trouver</button>
        </div>
    </div>
</div>
{{ form_end(form, {'render_rest': false}) }}
