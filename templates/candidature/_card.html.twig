<div class="candidate-block-three" id="profile-{{ candidature.id }}">
    <div class="inner-box">
        <div class="">
            <h4 class="name"><a href="{{ path('profile_show', {'id': candidature.candidat.profile.id}) }}">{{ candidature.candidat|capitalize }}</a></h4>
            <ul class="candidate-info">
                <li class="designation">{{ candidature.candidat.profile.titre|capitalize }}</li>
                <li><span class="icon flaticon-map-locator"></span> {{ candidature.candidat.profile.ville }}</li>
                <li><span class="icon flaticon-diploma-1"></span> {{ candidature.candidat.profile.typeDiplome }}</li>
            </ul>
            <ul class="post-tags">
                <li><a href="#">{{ candidature.annonce|join|capitalize }}</a></li>
            </ul>
        </div>
        <div class="option-box">
            <!-- Dashboard Option -->
            <div class="dropdown resume-action">
                <button class="dropdown-toggle theme-btn btn-style-three" role="button" data-toggle="dropdown" aria-expanded="false">Action <i class="fa fa-angle-down"></i></button>

                <ul class="dropdown-menu">
                    <li><a href="{{ path('candidature_show', {'id': candidature.id}) }}"><span class="la la-eye"></span> Voir la candidature</a></li>
                    <li><a href="#"><span class="la la-check"></span> Accepter</a></li>
                    <li><a href="#"><span class="la la-times-circle"></span> Rejeter</a></li>
                </ul>
            </div>

            {% include 'candidature/_delete_form.html.twig' %}
        </div>
    </div>
</div>